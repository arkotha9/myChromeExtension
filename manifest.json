{
    "manifest_version": 3,
    "name": "Summon Summary",
    "version": "2.0",
    "description": "A Chrome extension to summarize the web page I am on",
    "permissions": [
        "activeTab",
        "storage", 
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"] 
        }
    ]
}